{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strict": true,
    "outDir": "./dist/",
    "target": "es2017",
    "sourceMap": true
  },
  "include": ["**/*.d.ts", "src/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*", "**/*.spec.ts"]
}
